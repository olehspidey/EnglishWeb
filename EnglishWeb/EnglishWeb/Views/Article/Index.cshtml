@using EnglishWeb.Core.Models
@model EnglishWeb.Core.Models.ViewModels.ArticleViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">@Model.Text</p>
    </div>
</div>

<div class="d-flex mt-5 align-items-end">
    <h4 class="mr-2">Автор:</h4>
    <h6>@Model.User.Name @Model.User.LastName</h6>
</div>
@if (User.Identity.Name != Model.User.UserName && User.IsInRole(UserRoles.User))
{
    <div>
        <a class="btn btn-outline-primary" 
           role="button"
           asp-action="Index" asp-controller="Cabinet"
           asp-route-tab="2"
           asp-route-isSentRes="false"
           asp-route-sentTo="@Model.User.Id">Написать учителю</a>
    </div>
}

